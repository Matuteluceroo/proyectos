{
  "name": "Saber Citrícola - Sistema de Gestión de Conocimiento",
  "short_name": "Saber Citrícola",
  "description": "Sistema de gestión de conocimiento para el sector citrícola de Tucumán, Argentina. Permite gestionar documentos, categorías y acceder a información offline.",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#16a085",
  "background_color": "#ffffff",
  "lang": "es-AR",
  "scope": "/",
  "id": "saber-citricola-app",
  
  "icons": [
    {
      "src": "/vite.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  
  "categories": [
    "education",
    "productivity", 
    "business",
    "utilities"
  ],
  
  "shortcuts": [
    {
      "name": "Documentos",
      "short_name": "Documentos", 
      "description": "Ver todos los documentos",
      "url": "/documentos",
      "icons": [
        {
          "src": "/vite.svg",
          "sizes": "any"
        }
      ]
    },
    {
      "name": "Crear Documento",
      "short_name": "Crear",
      "description": "Crear nuevo documento",
      "url": "/crear-documento", 
      "icons": [
        {
          "src": "/vite.svg",
          "sizes": "any"
        }
      ]
    },
    {
      "name": "Gestión de Contenido",
      "short_name": "Gestión",
      "description": "Administrar contenido y categorías",
      "url": "/gestion-contenido",
      "icons": [
        {
          "src": "/vite.svg", 
          "sizes": "any"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Ver estadísticas y resumen",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/vite.svg",
          "sizes": "any"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "/vite.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "platform": "wide",
      "label": "Vista del dashboard principal"
    },
    {
      "src": "/vite.svg", 
      "sizes": "any",
      "type": "image/svg+xml",
      "platform": "narrow",
      "label": "Vista móvil de documentos"
    }
  ],
  
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  
  "iarc_rating_id": "",
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+citricola",
      "url": "/documento?id=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/crear-documento",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/msword": [".doc", ".docx"]
      }
    }
  ],
  
  "share_target": {
    "action": "/crear-documento",
    "method": "GET", 
    "params": {
      "title": "titulo",
      "text": "contenido",
      "url": "enlace"
    }
  },
  
  "capture_links": "existing-client-navigate",
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone", 
    "browser"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  }
}