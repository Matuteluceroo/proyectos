{
  "name": "saber-citricola",
  "version": "1.0.0",
  "description": "Sistema de Gestión del Conocimiento para la Industria Citrícola de Tucumán",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "node scripts/iniciar-saber-citricola.js",
    "clean": "rimraf node_modules backend/node_modules frontend/node_modules",
    "clean:logs": "node -e \"const fs=require('fs'),path=require('path'),glob=require('glob');[...glob.sync('*.log'),...glob.sync('backend/logs/*.log')].forEach(f=>fs.existsSync(f)&&fs.unlinkSync(f))\"",
    "clean:uploads": "rimraf backend/uploads/tmp",
    "clean:db": "rimraf backend/saber_citricola.db backend/backups",
    "clean:all": "npm run clean && npm run clean:logs && npm run clean:uploads",
    "setup:folders": "node -e \"const fs=require('fs');['docs','scripts','backend/__tests__','backend/backups','backend/uploads'].forEach(d=>{if(!fs.existsSync(d))fs.mkdirSync(d,{recursive:true})});fs.writeFileSync('backend/uploads/.gitkeep','');fs.writeFileSync('backend/backups/.gitkeep','')\"",
    "check:structure": "node scripts/check-project-structure.js",
    "prepare:git": "npm run clean:logs && npm run clean:db && npm run check:structure"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "glob": "^10.3.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "gestion-conocimiento",
    "citricola",
    "tucuman",
    "agricultura"
  ],
  "author": "Tu Nombre",
  "license": "MIT"
}